# Postgres connection
DATABASE_URL="postgresql://user:password@localhost:5432/calendar"

# Control-Plane Resolver (Tenant/App lookup)
CONTROL_PLANE_URL="http://localhost:3000"
ENABLE_TENANT_GUARD=true
CONTROL_PLANE_WHATSAPP_URL="http://localhost:3003/api/internal/whatsapp/send"
CONTROL_PLANE_SMS_URL="http://localhost:3003/api/internal/sms/send"
WHATSAPP_ALLOW_TEXT_FALLBACK="true"

# Secret for signed sessions (required in production)
AUTH_SECRET="change-me"

# Shared secret for bearer tenant headers (optional; required for signed Authorization tokens)
TENANT_AUTH_SECRET="change-me"

# Shared secret for Google Actions Center adapter (HMAC auth)
ACTIONS_CENTER_SHARED_SECRET="change-me"

# Default tenant id for legacy/bestandsdaten
DEFAULT_TENANT_ID="legacy"

# Base URL der App (für Links in E-Mails)
APP_BASE_URL="http://localhost:3002"

# Availability caching (0 disables cache; set to >0 to enable)
AVAILABILITY_CACHE_TTL_SECONDS=0
AVAILABILITY_CACHE_MS=0
SHIFT_PLAN_CACHE_MS=0

# SMTP (für Passwort-Reset)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user"
SMTP_PASS="password"
SMTP_FROM="no-reply@example.com"

# Optional: Legacy-Plaintext-Passwörter temporär zulassen (nicht für Produktion)
ALLOW_PLAINTEXT_PASSWORDS=false

# Shared secret for internal provisioning (must match control-plane PROVISION_SECRET)
PROVISION_SECRET="change-me"

# Tillhub customer sync (optional)
TILLHUB_CUSTOMER_SYNC_TENANT_ID=""
TILLHUB_CUSTOMER_SYNC_LOCATIONS="meissen,dresden"
TILLHUB_CUSTOMER_SYNC_INTERVAL_MINUTES=60

# Tillhub POS (geparkte Vorgänge)
TILLHUB_POS_SYNC_INTERVAL_SECONDS=10
TILLHUB_POS_SYNC_WINDOW_MINUTES=5
TILLHUB_POS_CANCEL_WINDOW_MINUTES=60
TILLHUB_POS_PAYMENT_WINDOW_MINUTES=1440

# Shared secret for tenant SSO (must match control-plane TENANT_SSO_SECRET)
TENANT_SSO_SECRET="change-me"

# Optional: bearer token (base64url JSON) for local SSO, example payload: {\"sub\":\"user-1\",\"tenantId\":\"legacy\"}
# AUTH_TOKEN_B64=""
